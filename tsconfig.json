{
  "emitDecoratorMetadata": true,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "declaration": false,
    "outDir": "./dist",
    "moduleResolution": "node",
    "sourceMap": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "jsx": "react",
    "target": "es5",
    "noImplicitAny": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015",
      "es2016",
      "es2017",
      "es2018.promise"
    ],
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "coverage"
  ]
}
